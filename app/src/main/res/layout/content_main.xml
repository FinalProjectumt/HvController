<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:visibility="visible">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/ph_no"
        android:hint="Enter number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/contactt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/opencontact"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ph_no"
        android:layout_toEndOf="@+id/ph_no" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/text_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="11dp"
        app:layout_anchorGravity="bottom|right|end"
        android:theme="@style/Base.Theme.AppCompat.Light" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mic_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="170dp"
        android:clickable="true"
        android:src="@drawable/mic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        app:layout_anchorGravity="bottom|right|end"
        android:tint="#d7dbdd"
        android:theme="@style/Theme.Design.Light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:layout_above="@+id/text_fab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp"
        android:hint="Enter message"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/send_btn"
        android:layout_toStartOf="@+id/send_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_btn"
        android:src="@drawable/sendicon"
        android:background="#fff"
        android:visibility="invisible"
        android:layout_alignTop="@+id/msg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/group"
        android:layout_below="@+id/opencontact"
       >

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan on"
        android:id="@+id/Fanon"
        android:layout_below="@+id/opencontact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:checked="false"
        android:layout_alignRight="@+id/Doorclose"
        android:layout_alignEnd="@+id/Doorclose"
        android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light on"
            android:id="@+id/Lighton"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fan off"
            android:id="@+id/Fanoff"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:layout_below="@+id/opencontact"
            android:layout_toRightOf="@+id/text_fab"
            android:layout_toEndOf="@+id/text_fab"
            android:layout_marginTop="41dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light off"
            android:id="@+id/Lightoff"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door open"
        android:id="@+id/Dooropen"
        android:layout_alignTop="@+id/Fanoff"
        android:layout_toRightOf="@+id/Fanoff"
        android:layout_toEndOf="@+id/Fanoff"
        android:checked="false"
        android:onClick="onRadioButtonClicked"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door close"
        android:id="@+id/Doorclose"
        android:checked="false"
        android:layout_below="@+id/Fanon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


</RelativeLayout>
